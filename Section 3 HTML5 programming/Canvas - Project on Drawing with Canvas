<!DOCTYPE html>
<html>

	<head>

		<title>Canvas</title>

		<style>
			#myCanvas{
				border: 1px #000 solid;
				background: #f4f4f4;
			}

		</style>

	</head>



	<body>

		<canvas id="myCanvas" width="300" height="300"></canvas>

		<script> //javascript
			var c = document.getElementById('myCanvas');
			var ctx = c.getContext('2d');

		//Retangle
		ctx.fillStyle='red' //first two number is the location of the starting point
		ctx.fillRect(75,75,150,150); // the last two number is the size of the retangle

		//creating a line starting postion is at 0,0 and ending postion is 250,150	
		ctx.moveTo(0,0);
		ctx.lineTo(250, 150);
		ctx.stroke();

		//circle
		ctx.beginPath();
		ctx.arc(150,150,60,0,2*Math.PI);
		ctx.fillStyle='green';
		ctx.fill();
		ctx.lineWidh=4;
		ctx.strokeStyle='pink';
		ctx.stroke();

		//text
		ctx.font = '50px Arial';
		ctx.strokeStyle = 'blue';
		ctx.strokeText('Hello World', 20, 150 ); //the two number is the postion of the text

		//gradient
		var grd = ctx.createLinearGradient(0,0,100,0);
		grad.addColorStop(1, 'blue');
		grd.addColorStop(1, 'White');
		ctx.fillStyle = grd;
		ctx.fillRect(10,10,150,150);
		</script>

	</body>

</html>
